@model IEnumerable<HistorialdeAlquiler>
@{
    ViewData["Title"] = "Reporte Detallado";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-chart-pie"></i> @ViewData["Title"] - @ViewBag.Fecha.ToString("dd/MM/yyyy")</h2>
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver
    </a>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Resumen del Día</h5>
                <p class="card-text">
                    <strong>Total Alquileres:</strong> @Model.Count()<br>
                    <strong>Ingresos Totales:</strong> <span class="text-success">$@ViewBag.Ingresos.ToString("N2")</span><br>
                    <strong>Promedio por Alquiler:</strong> $@(Model.Any() ? (ViewBag.Ingresos / Model.Count()).ToString("N2") : "0.00")
                </p>
            </div>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID Historial</th>
                <th>Cuenta</th>
                <th>Máquina</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Duración</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var historial in Model)
            {
                <tr>
                    <td>@historial.IdHistorial</td>
                    <td>#@historial.Ncuenta</td>
                    <td>#@historial.Nmaquina</td>
                    <td>@historial.FechaInicio.ToString("HH:mm")</td>
                    <td>@historial.FechaFin.ToString("HH:mm")</td>
                    <td>@historial.TiempoUsado?.ToString(@"hh\:mm\:ss")</td>
                    <td class="text-success fw-bold">$@historial.TotalPagar.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>
</div>