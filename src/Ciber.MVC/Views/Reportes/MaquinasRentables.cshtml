@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Máquinas Más Rentables";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-desktop"></i> @ViewData["Title"]</h2>
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Máquina</th>
                <th>Características</th>
                <th>Tipo</th>
                <th>Veces Alquilada</th>
                <th>Ingresos Generados</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var maquina in Model)
            {
                <tr>
                    <td>#@maquina.Nmaquina</td>
                    <td>@maquina.caracteristicas</td>
                    <td>
                        <span class="badge bg-info">@maquina.tipoMaquina</span>
                    </td>
                    <td>@maquina.VecesAlquilada</td>
                    <td>
                        <span class="badge bg-success">$@(((decimal)maquina.IngresosGenerados).ToString("N2"))</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>