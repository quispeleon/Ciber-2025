@model IEnumerable<Transaccion>
@{
    ViewData["Title"] = "Todas las Transacciones";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-exchange-alt"></i> @ViewData["Title"]</h2>
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Cuenta</th>
                <th>Tipo</th>
                <th>Monto</th>
                <th>Fecha</th>
                <th>Descripci√≥n</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaccion in Model)
            {
                <tr>
                    <td>@transaccion.IdTransaccion</td>
                    <td>#@transaccion.Ncuenta</td>
                    <td>
                        <span class="badge bg-@(transaccion.Tipo == "Recarga" ? "success" : 
                                              transaccion.Tipo == "Consumo" ? "warning" : "info")">
                            @transaccion.Tipo
                        </span>
                    </td>
                    <td class="text-@(transaccion.Tipo == "Recarga" ? "success" : "danger") fw-bold">
                        @(transaccion.Tipo == "Recarga" ? "+" : "-")$@transaccion.Monto.ToString("N2")
                    </td>
                    <td>@transaccion.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@transaccion.Descripcion</td>
                </tr>
            }
        </tbody>
    </table>
</div>