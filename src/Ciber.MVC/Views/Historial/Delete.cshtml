@model HistorialdeAlquiler
@{
    ViewData["Title"] = "Eliminar Registro del Historial";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4><i class="fas fa-exclamation-triangle"></i> @ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h5>¿Está seguro que desea eliminar este registro del historial?</h5>
                    <p class="mb-0">
                        Esta acción no se puede deshacer. Se eliminará permanentemente 
                        el registro del alquiler del historial.
                    </p>
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <h6>Información del Registro a Eliminar:</h6>
                        <dl class="row">
                            <dt class="col-sm-4">ID Historial:</dt>
                            <dd class="col-sm-8">@Model.IdHistorial</dd>

                            <dt class="col-sm-4">Cuenta:</dt>
                            <dd class="col-sm-8">#@Model.Ncuenta</dd>

                            <dt class="col-sm-4">Máquina:</dt>
                            <dd class="col-sm-8">#@Model.Nmaquina</dd>

                            <dt class="col-sm-4">Fecha:</dt>
                            <dd class="col-sm-8">@Model.FechaInicio.ToString("dd/MM/yyyy HH:mm")</dd>

                            <dt class="col-sm-4">Duración:</dt>
                            <dd class="col-sm-8">@Model.DuracionTotal.ToString(@"hh\:mm\:ss")</dd>

                            <dt class="col-sm-4">Total:</dt>
                            <dd class="col-sm-8">$@Model.TotalPagar.ToString("N2")</dd>
                        </dl>
                    </div>
                </div>

                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.IdHistorial" />
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="@Url.Action("Details", new { id = Model.IdHistorial })" 
                           class="btn btn-secondary me-md-2">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Confirmar Eliminación
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>