@model Ciber.MVC.Controllers.ReporteHistorialViewModel
@{
    ViewData["Title"] = "Reportes del Historial";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-chart-bar"></i> @ViewData["Title"]</h2>
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver al Historial
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalRegistros</h4>
                        <p class="card-text">Total Registros</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-database fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>$@Model.IngresosTotales.ToString("N2")</h4>
                        <p class="card-text">Ingresos (Último Mes)</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-dollar-sign fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.PromedioTiempoUso.ToString(@"hh\:mm")</h4>
                        <p class="card-text">Promedio de Uso</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-chart-pie"></i> Reportes Rápidos</h5>
            </div>
            <div class="card-body">
                <div class="list-group">
                    <a href="@Url.Action("Index", "Reportes", new { area = "" })" 
                       class="list-group-item list-group-item-action">
                        <i class="fas fa-tachometer-alt"></i> Dashboard Principal
                    </a>
                    <a href="@Url.Action("TopClientes", "Reportes", new { area = "" })" 
                       class="list-group-item list-group-item-action">
                        <i class="fas fa-trophy"></i> Top 10 Clientes
                    </a>
                    <a href="@Url.Action("MaquinasRentables", "Reportes", new { area = "" })" 
                       class="list-group-item list-group-item-action">
                        <i class="fas fa-desktop"></i> Máquinas Más Rentables
                    </a>
                    <a href="@Url.Action("Transacciones", "Reportes", new { area = "" })" 
                       class="list-group-item list-group-item-action">
                        <i class="fas fa-exchange-alt"></i> Todas las Transacciones
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-search"></i> Búsquedas Avanzadas</h5>
            </div>
            <div class="card-body">
                <p class="card-text">
                    Utilice la función de búsqueda en el listado de historial para:
                </p>
                <ul>
                    <li>Buscar por número de cuenta</li>
                    <li>Buscar por número de máquina</li>
                    <li>Filtrar por rango de fechas</li>
                    <li>Ver registros específicos</li>
                </ul>
                <div class="d-grid">
                    <a href="@Url.Action("Index")" class="btn btn-primary">
                        <i class="fas fa-list"></i> Ir al Listado Completo
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-lightbulb"></i> Información del Sistema</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Funcionalidades del Historial:</h6>
                        <ul>
                            <li>Registro completo de todos los alquileres</li>
                            <li>Información detallada de tiempos y pagos</li>
                            <li>Búsqueda y filtrado avanzado</li>
                            <li>Reportes estadísticos</li>
                            <li>Gestión de registros históricos</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6>Datos Incluidos:</h6>
                        <ul>
                            <li>Fechas y horarios exactos</li>
                            <li>Duración real del uso</li>
                            <li>Costos y pagos realizados</li>
                            <li>Estado de cada transacción</li>
                            <li>Observaciones y notas</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>