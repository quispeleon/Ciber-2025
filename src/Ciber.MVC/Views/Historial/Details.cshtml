@model HistorialdeAlquiler
@{
    ViewData["Title"] = "Detalles del Historial";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-info-circle"></i> @ViewData["Title"]</h2>
    <div>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver al Historial
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Informaci칩n del Alquiler</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">ID Historial:</dt>
                    <dd class="col-sm-8">@Model.IdHistorial</dd>

                    <dt class="col-sm-4">ID Alquiler:</dt>
                    <dd class="col-sm-8">@Model.IdAlquiler</dd>

                    <dt class="col-sm-4">Cuenta:</dt>
                    <dd class="col-sm-8">
                        <a href="@Url.Action("Details", "Cuenta", new { id = Model.Ncuenta })" 
                           class="text-decoration-none">
                            #@Model.Ncuenta
                        </a>
                    </dd>

                    <dt class="col-sm-4">M치quina:</dt>
                    <dd class="col-sm-8">
                        <a href="@Url.Action("Details", "Maquina", new { id = Model.Nmaquina })" 
                           class="text-decoration-none">
                            #@Model.Nmaquina
                        </a>
                    </dd>

                    <dt class="col-sm-4">Fecha Inicio:</dt>
                    <dd class="col-sm-8">@Model.FechaInicio.ToString("dd/MM/yyyy HH:mm:ss")</dd>

                    <dt class="col-sm-4">Fecha Fin:</dt>
                    <dd class="col-sm-8">@Model.FechaFin.ToString("dd/MM/yyyy HH:mm:ss")</dd>

                    <dt class="col-sm-4">Duraci칩n Total:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info">@Model.DuracionTotal.ToString(@"hh\:mm\:ss")</span>
                    </dd>

                    <dt class="col-sm-4">Horas Utilizadas:</dt>
                    <dd class="col-sm-8">@Model.HorasUtilizadas.ToString("N2") horas</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Informaci칩n de Pago</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Precio por Hora:</dt>
                    <dd class="col-sm-8">$@Model.PrecioPorHora.ToString("N2")</dd>

                    <dt class="col-sm-4">Total a Pagar:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-success fs-6">$@Model.TotalPagar.ToString("N2")</span>
                    </dd>

                    <dt class="col-sm-4">Monto Pagado:</dt>
                    <dd class="col-sm-8">$@Model.MontoPagado.ToString("N2")</dd>

                    <dt class="col-sm-4">Monto Pendiente:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-@(Model.MontoPendiente <= 0 ? "success" : "warning")">
                            $@Model.MontoPendiente.ToString("N2")
                        </span>
                    </dd>

                    <dt class="col-sm-4">Estado de Pago:</dt>
                    <dd class="col-sm-8">
                        @if (Model.EstaCompletamentePagado)
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-check-circle"></i> Completamente Pagado
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-warning">
                                <i class="fas fa-exclamation-circle"></i> Pendiente de Pago
                            </span>
                        }
                    </dd>

                    <dt class="col-sm-4">Estado Final:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-secondary">@Model.EstadoFinal</span>
                    </dd>
                </dl>

                @if (Model.TiempoContratado.HasValue)
                {
                    <hr>
                    <dt class="col-sm-4">Tiempo Contratado:</dt>
                    <dd class="col-sm-8">@Model.TiempoContratado.Value.ToString(@"hh\:mm\:ss")</dd>

                    <dt class="col-sm-4">Tiempo Usado:</dt>
                    <dd class="col-sm-8">@Model.TiempoUsado?.ToString(@"hh\:mm\:ss")</dd>

                    <dt class="col-sm-4">Diferencia:</dt>
                    <dd class="col-sm-8">
                        @if (Model.TiempoUsado.HasValue)
                        {
                            var diferencia = Model.TiempoUsado.Value - Model.TiempoContratado.Value;
                            var badgeClass = diferencia.TotalSeconds >= 0 ? "warning" : "success";
                            var icon = diferencia.TotalSeconds >= 0 ? "fa-clock" : "fa-check";
                            
                            <span class="badge bg-@badgeClass">
                                <i class="fas @icon"></i> 
                                @diferencia.ToString(@"hh\:mm\:ss")
                            </span>
                        }
                    </dd>
                }
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.Observaciones))
{
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-sticky-note"></i> Observaciones</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">@Model.Observaciones</p>
                </div>
            </div>
        </div>
    </div>
}

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5>Acciones</h5>
            </div>
            <div class="card-body">
                <div class="btn-group">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver al Historial
                    </a>
                    <a href="@Url.Action("Delete", new { id = Model.IdHistorial })" 
                       class="btn btn-danger">
                        <i class="fas fa-trash"></i> Eliminar Registro
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>