@model IEnumerable<Maquina>
@{
    ViewData["Title"] = "Gesti√≥n de M√°quinas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@ViewData["Title"]</h2>
    <a href="@Url.Action("Create")" class="btn btn-success">
        Nueva M√°quina
    </a>
</div>

<div class="row g-4">
    @foreach (var maquina in Model)
    {
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header d-flex justify-content-between align-items-center bg-dark text-white">
                    <span class="fw-bold">M√°quina #@maquina.Nmaquina</span>
                    <span class="badge @(
                        maquina.Estado == "Disponible" ? "bg-success" : 
                        maquina.Estado == "Ocupada" ? "bg-warning text-dark" : 
                        "bg-secondary"
                    )">
                        @maquina.Estado
                    </span>
                </div>
                <div class="card-body d-flex flex-column bg-light text-dark">
                    <h6 class="card-title text-truncate" title="@maquina.Caracteristicas">
                        @maquina.Caracteristicas
                    </h6>
                    <p class="card-text mb-3">
                        <strong>üñ•Ô∏è Tipo:</strong> @maquina.TipoMaquina<br>
                        <strong>üí∞ Precio/Hora:</strong> $@maquina.PrecioPorHora.ToString("N2")
                    </p>

                    <div class="mt-auto">
                        <!-- Acciones solo con emojis -->
                        <div class="d-flex justify-content-around align-items-center py-2">
                            <!-- Ver detalles -->
                            <a href="@Url.Action("Details", new { id = maquina.Nmaquina })" 
                               class="action-emoji" title="Ver Detalles">
                                üëÅÔ∏è
                            </a>

                            <!-- Editar -->
                            <a href="@Url.Action("Edit", new { id = maquina.Nmaquina })" 
                               class="action-emoji" title="Editar M√°quina">
                                ‚úèÔ∏è
                            </a>

                            <!-- Cambiar estado -->
                            @if (maquina.Estado == "Disponible")
                            {
                                <a href="@Url.Action("CambiarEstado", new { id = maquina.Nmaquina, estado = "Ocupada" })" 
                                   class="action-emoji" title="Marcar como Ocupada">
                                    ‚è∏Ô∏è
                                </a>
                            }
                            else if (maquina.Estado == "Ocupada")
                            {
                                <a href="@Url.Action("CambiarEstado", new { id = maquina.Nmaquina, estado = "Disponible" })" 
                                   class="action-emoji" title="Marcar como Disponible">
                                    ‚ñ∂Ô∏è
                                </a>
                            }

                            <!-- Eliminar -->
                            <a href="@Url.Action("Delete", new { id = maquina.Nmaquina })" 
                               class="action-emoji delete-emoji" title="Eliminar M√°quina"
                               onclick="return confirm('¬øEst√°s seguro de que quieres eliminar la m√°quina #@maquina.Nmaquina?')">
                                üóëÔ∏è
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <div class="display-1">üñ•Ô∏è</div>
        <h3 class="text-muted mt-3">No hay m√°quinas registradas</h3>
        <p class="text-muted">Comienza agregando tu primera m√°quina</p>
        <a href="@Url.Action("Create")" class="btn btn-primary mt-3">
            Agregar Primera M√°quina
        </a>
    </div>
}

<style>
    .action-emoji {
        font-size: 1.5rem;
        text-decoration: none;
        padding: 8px;
        border-radius: 50%;
        transition: all 0.3s ease;
        display: inline-block;
        background: none;
        border: none;
    }

    .action-emoji:hover {
        transform: scale(1.3);
        background-color: rgba(0, 0, 0, 0.1);
    }

    .delete-emoji:hover {
        background-color: rgba(220, 53, 69, 0.2);
        transform: scale(1.3);
    }

    /* Efectos espec√≠ficos para cada emoji al hacer hover */
    .action-emoji[title="Ver Detalles"]:hover {
        background-color: rgba(13, 110, 253, 0.2);
    }

    .action-emoji[title="Editar M√°quina"]:hover {
        background-color: rgba(255, 193, 7, 0.2);
    }

    .action-emoji[title="Marcar como Ocupada"]:hover,
    .action-emoji[title="Marcar como Disponible"]:hover {
        background-color: rgba(108, 117, 125, 0.2);
    }
</style>