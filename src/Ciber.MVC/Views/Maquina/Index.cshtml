@model IEnumerable<Maquina>
@{
    ViewData["Title"] = "Gesti칩n de M치quinas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2> @ViewData["Title"]</h2>
    <a href="@Url.Action("Create")" class="btn btn-success">
       
        Nueva M치quina
    </a>
</div>

<div class="row">
    @foreach (var maquina in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <strong>M치quina #@maquina.Nmaquina</strong>
                    <span class="badge bg-@(maquina.Estado == "Disponible" ? "success" : 
                                          maquina.Estado == "Ocupada" ? "warning" : "danger")">
                        @maquina.Estado
                    </span>
                </div>
                <div class="card-body">
                    <h6 class="card-title">@maquina.Caracteristicas</h6>
                    <p class="card-text">
                        <strong>Tipo:</strong> @maquina.TipoMaquina<br>
                        <strong>Precio/Hora:</strong> $@maquina.PrecioPorHora.ToString("N2")
                    </p>
                    
                    <div class="btn-group w-100">
                        <a href="@Url.Action("Details", new { id = maquina.Nmaquina })" 
                           class="btn btn-sm btn-info">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="@Url.Action("Edit", new { id = maquina.Nmaquina })" 
                           class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i>
                        </a>
                        @if (maquina.Estado == "Disponible")
                        {
                            <a href="@Url.Action("CambiarEstado", new { id = maquina.Nmaquina, estado = "Ocupada" })" 
                               class="btn btn-sm btn-warning" title="Marcar como Ocupada">
                                <i class="fas fa-pause"></i>
                            </a>
                        }
                        else if (maquina.Estado == "Ocupada")
                        {
                            <a href="@Url.Action("CambiarEstado", new { id = maquina.Nmaquina, estado = "Disponible" })" 
                               class="btn btn-sm btn-success" title="Marcar como Disponible">
                                <i class="fas fa-play"></i>
                            </a>
                        }
                        
                    </div>
                </div>
            </div>
        </div>
    }
</div>