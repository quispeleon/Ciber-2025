@model Maquina
@{
    ViewData["Title"] = "Editar Máquina";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-edit"></i> @ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="Nmaquina" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Caracteristicas" class="form-label">Características</label>
                                <input asp-for="Caracteristicas" class="form-control" required>
                                <span asp-validation-for="Caracteristicas" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="TipoMaquina" class="form-label">Tipo de Máquina</label>
                                <select asp-for="TipoMaquina" class="form-control" required>
                                    <option value="Gaming">Gaming</option>
                                    <option value="Estándar">Estándar</option>
                                    <option value="Básico">Básico</option>
                                    <option value="Premium">Premium</option>
                                </select>
                                <span asp-validation-for="TipoMaquina" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="PrecioPorHora" class="form-label">Precio por Hora</label>
                                <input asp-for="PrecioPorHora" type="number" step="0.01" class="form-control" required>
                                <span asp-validation-for="PrecioPorHora" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Estado" class="form-label">Estado</label>
                                <select asp-for="Estado" class="form-control" required>
                                    <option value="Disponible">Disponible</option>
                                    <option value="Ocupada">Ocupada</option>
                                    <option value="Mantenimiento">Mantenimiento</option>
                                    <option value="Reservada">Reservada</option>
                                </select>
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="UltimoMantenimiento" class="form-label">Último Mantenimiento</label>
                                <input asp-for="UltimoMantenimiento" type="date" class="form-control">
                                <span asp-validation-for="UltimoMantenimiento" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ProximoMantenimiento" class="form-label">Próximo Mantenimiento</label>
                                <input asp-for="ProximoMantenimiento" type="date" class="form-control">
                                <span asp-validation-for="ProximoMantenimiento" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="@Url.Action("Details", new { id = Model.Nmaquina })" class="btn btn-secondary me-md-2">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save"></i> Actualizar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}