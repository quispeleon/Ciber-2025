@model Maquina

@{
    ViewData["Title"] = "Eliminar Máquina";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-6 text-danger">
                <i class="fas fa-desktop-times me-2"></i>Eliminar Máquina
            </h1>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
            </a>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminación
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>¡Atención!</strong> Esta acción no se puede deshacer. Se eliminará permanentemente la máquina seleccionada.
                </div>
                
                <h6 class="text-muted mb-3">¿Está seguro que desea eliminar esta máquina?</h6>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-hashtag me-1"></i>ID de Máquina:
                        </label>
                        <p class="form-control-plaintext">
                            <span class="badge bg-primary fs-6">@Model.Nmaquina</span>
                        </p>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-toggle-on me-1"></i>Estado:
                        </label>
                        <p class="form-control-plaintext">
                            <span class="badge bg-@(Model.Estado == "Disponible" ? "success" : 
                                          Model.Estado == "Ocupada" ? "warning" : "danger") fs-6">
                                @Model.Estado
                            </span>
                        </p>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-12 mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-info-circle me-1"></i>Características:
                        </label>
                        <p class="form-control-plaintext fs-5">
                            @if (!string.IsNullOrEmpty(Model.Caracteristicas))
                            {
                                @Model.Caracteristicas
                            }
                            else
                            {
                                <span class="text-muted fst-italic">Sin características especificadas</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Nmaquina" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                            <i class="fas fa-times me-2"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Eliminar Definitivamente
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
