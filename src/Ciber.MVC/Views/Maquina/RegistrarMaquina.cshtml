@model Ciber.core.Maquina

@{
    ViewData["Title"] = "Registrar Nueva MÃ¡quina";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="card shadow-sm p-4 mb-4 bg-light">
    <form asp-action="RegistrarMaquina" method="post">
        <div class="mb-3">
            <label asp-for="Caracteristicas" class="form-label"></label>
            <input asp-for="Caracteristicas" class="form-control" />
            <span asp-validation-for="Caracteristicas" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label class="form-label">Estado</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="Estado" value="true" id="estado1" checked />
                <label class="form-check-label" for="estado1">Disponible</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="Estado" value="false" id="estado2" />
                <label class="form-check-label" for="estado2">No Disponible</label>
            </div>
        </div>

        <button type="submit" class="btn btn-success">Registrar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Volver a la lista</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
