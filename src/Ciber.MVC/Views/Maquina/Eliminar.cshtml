@model Ciber.core.Maquina

@{
    ViewData["Title"] = "Confirmar eliminación";
}

<div class="container mt-4">
    <div class="alert alert-danger shadow-sm">
        <h4 class="alert-heading">¿Estás seguro?</h4>
        <p>Estás a punto de eliminar la máquina con número <strong>@Model.Nmaquina</strong>.</p>
        <p><strong>Características:</strong> @Model.Caracteristicas</p>
        <hr />
        <form asp-action="Eliminar" method="post" class="d-inline">
            <input type="hidden" asp-for="Nmaquina" />
            <button type="submit" class="btn btn-danger">Sí, eliminar</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </div>
</div>
