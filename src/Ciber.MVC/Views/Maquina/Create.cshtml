@model Maquina
@{
    ViewData["Title"] = "Crear Nueva Máquina";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4> @ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Caracteristicas" class="form-label">Características</label>
                                <input asp-for="Caracteristicas" class="form-control" required 
                                       placeholder="Ej: Intel i7, 16GB RAM, RTX 3060">
                                <span asp-validation-for="Caracteristicas" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="TipoMaquina" class="form-label">Tipo de Máquina</label>
                                <select asp-for="TipoMaquina" class="form-control" required>
                                    <option value="">Seleccionar...</option>
                                    <option value="Gaming">Gaming</option>
                                    <option value="Estándar">Estándar</option>
                                    <option value="Básico">Básico</option>
                                    <option value="Premium">Premium</option>
                                </select>
                                <span asp-validation-for="TipoMaquina" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="PrecioPorHora" class="form-label">Precio por Hora</label>
                                <input asp-for="PrecioPorHora" type="number" step="0.01" class="form-control" 
                                       value="5.00" required>
                                <span asp-validation-for="PrecioPorHora" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Estado" class="form-label">Estado Inicial</label>
                                <select asp-for="Estado" class="form-control" required>
                                    <option value="Disponible">Disponible</option>
                                    <option value="Mantenimiento">Mantenimiento</option>
                                </select>
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="@Url.Action("Index")" class="btn btn-secondary me-md-2">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Crear Máquina
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}