@model Ciber.MVC.Models.AlquilerViewModel

@{
    ViewData["Title"] = "Detalle del Alquiler";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <p><strong>ID Alquiler:</strong> @Model.IdAlquiler</p>
        <p><strong>Cuenta:</strong> @Model.Ncuenta</p>
        <p><strong>Máquina:</strong> @Model.Nmaquina</p>
        <p><strong>Tipo:</strong> @Model.Tipo</p>
        <p><strong>Duración:</strong> @(Model.CantidadTiempo.HasValue ? Model.CantidadTiempo.Value.ToString(@"hh\:mm\:ss") : "N/A")</p>
        <p><strong>Pagado:</strong> @(Model.Pagado ?? false ? "Sí" : "No")</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-2">Volver al listado</a>
