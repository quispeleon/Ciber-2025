@model IEnumerable<Ciber.MVC.Models.AlquilerViewModel>

@{
    ViewData["Title"] = "Listado de Alquileres";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Crear" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo Alquiler
    </a>
</div>

<table class="table table-striped table-hover table-bordered align-middle">
    <thead class="table-dark text-center">
        <tr>
            <th>ID</th>
            <th>Cuenta</th>
            <th>Máquina</th>
            <th>Pagado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@item.IdAlquiler</td>
                    <td>@item.Ncuenta</td>
                    <td>@item.Nmaquina</td>
                    <td>@(item.Pagado ?? false ? "Sí" : "No")</td>
                    <td>
                        <a asp-action="Detalle" asp-route-idAlquiler="@item.IdAlquiler" class="btn btn-info btn-sm me-1">
                            <i class="bi bi-eye"></i> Ver
                        </a>
                        <a asp-action="Eliminar" asp-route-idAlquiler="@item.IdAlquiler" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No hay alquileres registrados.</td>
            </tr>
        }
    </tbody>
</table>
