@model IEnumerable<Alquiler>
@{
    ViewData["Title"] = "Todos los Alquileres";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <a href="@Url.Action("Activos")" class="btn btn-warning me-2">
            ‚ñ∂Ô∏è Ver Activos
        </a>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            ‚ûï Nuevo Alquiler
        </a>
    </div>
</div>

@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var alquiler in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-header d-flex justify-content-between align-items-center @(alquiler.SesionActiva ? "bg-success" : "bg-secondary") text-white">
                        <span class="fw-bold">Alquiler #@alquiler.IdAlquiler</span>
                        <span class="badge @(alquiler.SesionActiva ? "bg-warning text-dark" : "bg-light text-dark")">
                            @(alquiler.SesionActiva ? "üü¢ Activo" : "‚ö´ Finalizado")
                        </span>
                    </div>
                    
                    <div class="card-body">
                        <!-- Informaci√≥n del cliente -->
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" 
                                 style="width: 40px; height: 40px;">
                                <span class="text-white">üë§</span>
                            </div>
                            <div>
                                <strong>Cuenta #@alquiler.Ncuenta</strong>
                            </div>
                        </div>

                        <!-- Informaci√≥n de la m√°quina -->
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-info rounded-circle d-flex align-items-center justify-content-center me-3" 
                                 style="width: 40px; height: 40px;">
                                <span class="text-white">üñ•Ô∏è</span>
                            </div>
                            <div>
                                <strong>M√°quina #@alquiler.Nmaquina</strong>
                            </div>
                        </div>

                        <!-- Tiempo y fechas -->
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <small class="text-muted">üïê Inicio:</small>
                                <small><strong>@alquiler.FechaInicio.ToString("dd/MM/yyyy HH:mm")</strong></small>
                            </div>
                            <div class="d-flex justify-content-between mb-1">
                                <small class="text-muted">‚è∞ Fin:</small>
                                <small><strong>@(alquiler.FechaFin?.ToString("dd/MM/yyyy HH:mm") ?? "üîÑ En curso")</strong></small>
                            </div>
                            <div class="d-flex justify-content-between">
                                <small class="text-muted">‚è±Ô∏è Duraci√≥n:</small>
                                <small><strong>@(alquiler.TiempoUsado?.ToString() ?? "üîÑ En curso")</strong></small>
                            </div>
                        </div>

                        <!-- Total a pagar -->
                        <div class="bg-light rounded p-3 mb-3 text-center">
                            <small class="text-muted d-block">üí∞ Total a Pagar</small>
                            <strong class="h5 text-success">$@alquiler.TotalAPagar.ToString("N2")</strong>
                        </div>

                        <!-- Acciones -->
                        <div class="d-flex justify-content-around align-items-center pt-2 border-top">
                            <a href="@Url.Action("Details", new { id = alquiler.IdAlquiler })" 
                               class="action-emoji" title="Ver Detalles">
                                üëÅÔ∏è
                            </a>

                            @if (alquiler.SesionActiva)
                            {
                                <a href="@Url.Action("Finalizar", new { id = alquiler.IdAlquiler })" 
                                   class="action-emoji finalizar-emoji" 
                                   title="Finalizar Alquiler"
                                   onclick="return confirm('¬øEst√°s seguro de que quieres finalizar el alquiler #@alquiler.IdAlquiler?')">
                                    ‚èπÔ∏è
                                </a>
                            }
                            else
                            {
                                <span class="action-emoji disabled-emoji" title="Alquiler Finalizado">
                                    ‚úÖ
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="display-1">üìã</div>
        <h3 class="text-muted mt-3">No hay alquileres registrados</h3>
        <p class="text-muted">Comienza creando tu primer alquiler</p>
        <a href="@Url.Action("Create")" class="btn btn-primary mt-3">
            ‚ûï Crear Primer Alquiler
        </a>
    </div>
}

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 12px;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }

    .action-emoji {
        font-size: 1.4rem;
        text-decoration: none;
        padding: 8px 12px;
        border-radius: 50%;
        transition: all 0.3s ease;
        display: inline-block;
    }

    .action-emoji:hover {
        transform: scale(1.3);
        background-color: rgba(0, 0, 0, 0.1);
    }

    .finalizar-emoji:hover {
        background-color: rgba(255, 193, 7, 0.3);
    }

    .disabled-emoji {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .card-header {
        border-radius: 12px 12px 0 0 !important;
        padding: 15px 20px;
    }

    .bg-light {
        background-color: #f8f9fa !important;
    }
</style>