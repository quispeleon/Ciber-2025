@model IEnumerable<Ciber.MVC.Models.AlquilerViewModel>

@{
    ViewData["Title"] = "Listado de Alquileres";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <a asp-action="Crear" class="btn btn-primary">+ Crear nuevo alquiler</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Cuenta</th>
            <th>Máquina</th>
            <th>Tipo</th>
            <th>Tiempo</th>
            <th>Pagado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdAlquiler</td>
                    <td>@item.Ncuenta</td>
                    <td>@item.Nmaquina</td>
                    <td>@item.Tipo</td>
                    <td>@item.CantidadTiempo</td>
                    <td>@(item.Pagado == true ? "Sí" : "No")</td>
                    <td>
                        <a asp-action="Eliminar" asp-route-idAlquiler="@item.IdAlquiler" class="btn btn-danger btn-sm">
                            Eliminar
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No hay alquileres registrados.</td>
            </tr>
        }
    </tbody>
</table>
