@model Ciber.core.Alquiler

@{
    ViewData["Title"] = "Confirmar Eliminación";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-danger">
    <p>¿Seguro que deseas eliminar el alquiler con ID <strong>@Model.IdAlquiler</strong>?</p>
    <ul>
        <li>Cuenta: @Model.Ncuenta</li>
        <li>Máquina: @Model.Nmaquina</li>
        <li>Tipo: @Model.Tipo</li>
    </ul>
</div>

<form asp-action="Eliminar" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdAlquiler" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
