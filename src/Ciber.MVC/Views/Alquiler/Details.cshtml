@model Alquiler
@{
    ViewData["Title"] = "Detalles del Alquiler";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-info-circle"></i> @ViewData["Title"]</h2>
    <div>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Información del Alquiler</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">@Model.IdAlquiler</dd>

                    <dt class="col-sm-4">Cuenta:</dt>
                    <dd class="col-sm-8">#@Model.Ncuenta</dd>

                    <dt class="col-sm-4">Máquina:</dt>
                    <dd class="col-sm-8">#@Model.Nmaquina</dd>

                    <dt class="col-sm-4">Tipo:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-@(Model.Tipo == 1 ? "info" : "warning")">
                            @(Model.Tipo == 1 ? "Libre" : "Tiempo Definido")
                        </span>
                    </dd>

                    <dt class="col-sm-4">Fecha Inicio:</dt>
                    <dd class="col-sm-8">@Model.FechaInicio.ToString("dd/MM/yyyy HH:mm:ss")</dd>

                    @if (Model.FechaFin.HasValue)
                    {
                        <dt class="col-sm-4">Fecha Fin:</dt>
                        <dd class="col-sm-8">@Model.FechaFin.Value.ToString("dd/MM/yyyy HH:mm:ss")</dd>
                    }

                    @if (Model.TiempoContratado.HasValue)
                    {
                        <dt class="col-sm-4">Tiempo Contratado:</dt>
                        <dd class="col-sm-8">@Model.TiempoContratado.Value.ToString(@"hh\:mm\:ss")</dd>
                    }

                    @if (Model.TiempoUsado.HasValue)
                    {
                        <dt class="col-sm-4">Tiempo Usado:</dt>
                        <dd class="col-sm-8">@Model.TiempoUsado.Value.ToString(@"hh\:mm\:ss")</dd>
                    }

                    <dt class="col-sm-4">Precio por Hora:</dt>
                    <dd class="col-sm-8">$@Model.PrecioPorHora.ToString("N2")</dd>

                    <dt class="col-sm-4">Total a Pagar:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-success fs-6">$@Model.TotalAPagar.ToString("N2")</span>
                    </dd>

                    <dt class="col-sm-4">Monto Pagado:</dt>
                    <dd class="col-sm-8">$@Model.MontoPagado.ToString("N2")</dd>

                    <dt class="col-sm-4">Estado:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-@(Model.SesionActiva ? "success" : "secondary")">
                            @(Model.SesionActiva ? "Activo" : "Finalizado")
                        </span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Acciones</h5>
            </div>
            <div class="card-body">
                @if (Model.SesionActiva)
                {
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Finalizar", new { id = Model.IdAlquiler })" 
                           class="btn btn-warning btn-lg">
                            <i class="fas fa-stop"></i> Finalizar Alquiler
                        </a>
                    </div>
                    
                    <div class="mt-3 p-3 bg-light rounded">
                        <h6>Información en Tiempo Real</h6>
                        <p><strong>Tiempo Transcurrido:</strong> 
                           @((DateTime.Now - Model.FechaInicio).ToString(@"hh\:mm\:ss"))</p>
                        <p><strong>Costo Actual:</strong> 
                           <span class="text-success">$@Model.CostoActual.ToString("N2")</span></p>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Este alquiler ya ha sido finalizado.
                    </div>
                }
            </div>
        </div>
    </div>
</div>