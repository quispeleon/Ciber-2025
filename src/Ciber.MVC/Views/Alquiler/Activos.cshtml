@model IEnumerable<Alquiler>

@{
    ViewData["Title"] = "Alquileres Activos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="fas fa-plus"></i> Nuevo Alquiler
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No hay alquileres activos en este momento.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Cuenta</th>
                    <th>Máquina</th>
                    <th>Inicio</th>
                    <th>Tiempo</th>
                    <th>Costo</th>
                    <th>Tipo</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td><strong>@a.IdAlquiler</strong></td>
                        <td>#@a.Ncuenta</td>
                        <td>#@a.Nmaquina</td>
                        <td>@a.FechaInicio.ToString("dd/MM/yyyy HH:mm")</td>
                        <td><span class="badge bg-secondary">
                            @((DateTime.Now - a.FechaInicio).ToString(@"hh\:mm\:ss"))
                        </span></td>
                        <td><span class="badge bg-success">
                            $@a.CostoActual.ToString("N2")
                        </span></td>
                        <td>
                            <span class="badge bg-info">
                                @(a.Tipo == 1 ? "Libre" : "Tiempo Definido")
                            </span>
                        </td>
                        <td>
                            <a href="@Url.Action("Finalizar", new { id = a.IdAlquiler })" 
                               class="btn btn-warning btn-sm">
                                <i class="fas fa-stop"></i> Finalizar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
