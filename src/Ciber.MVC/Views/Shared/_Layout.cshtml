<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ciber MVC</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        :root {
            --bg: #111;
            --nav-bg: #1c1c1c;
            --nav-hover: #2b2b2b;
            --accent: #397ce6;
            --text: #fff;
            --radius: 10px;
        }

        body {
            background: var(--bg);
            color: var(--text);
            font-family: "Segoe UI", sans-serif;
            margin: 0;
            padding-top: 70px;
        }

        /* NAVBAR HORIZONTAL */
        nav.navbar-custom {
            background: var(--nav-bg);
            box-shadow: 0 3px 10px rgba(0,0,0,.4);
            padding: 14px 25px;
        }

        .navbar-custom a.nav-link {
            color: var(--text) !important;
            font-size: 1rem;
            padding: 10px 15px;
            border-radius: var(--radius);
            transition: background .25s ease;
        }

        .navbar-custom a.nav-link:hover {
            background: var(--nav-hover);
        }

        .navbar-custom .active {
            background: var(--accent) !important;
            font-weight: bold;
        }

        /* Estilos para el modal de login */
        .modal-login {
            color: #333;
        }
        
        .modal-login .modal-content {
            border-radius: 15px;
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }
        
        .modal-login .modal-header {
            background: linear-gradient(135deg, var(--accent), #2a5fc1);
            color: white;
            border-radius: 15px 15px 0 0;
            border: none;
        }
        
        .modal-login .btn-login {
            background: var(--accent);
            color: white;
            font-weight: bold;
            padding: 10px 20px;
            width: 100%;
            border-radius: 8px;
            border: none;
            transition: background .3s;
        }
        
        .modal-login .btn-login:hover {
            background: #2a5fc1;
        }
        
        .modal-login .form-control {
            padding: 12px 15px;
            border-radius: 8px;
            border: 1px solid #ddd;
        }
        
        .modal-login .form-control:focus {
            border-color: var(--accent);
            box-shadow: 0 0 0 0.25rem rgba(57, 124, 230, 0.25);
        }

        /* M칩vil */
        @@media (max-width: 768px) {
            .navbar-custom {
                padding: 10px 18px;
            }
        }
    </style>
</head>
<body>

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
    <a class="navbar-brand fw-bold text-white" href="/">CiberMVC</a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="mainNavbar">
        <ul class="navbar-nav me-auto">
            <li class="nav-item">
                <a class="nav-link" href="/">游끼 Inicio</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Maquina">游 M치quinas</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Cuenta">游 Cuentas</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Alquiler">游닍 Alquileres</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Historial">游닆 Historial</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Reportes">游늵 Reportes</a>
            </li>
        </ul>
        
        <!-- Bot칩n de login en la derecha -->
        <button class="btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#loginModal">
            游댏 Iniciar Sesi칩n
        </button>
    </div>
</nav>

<!-- MODAL DE LOGIN -->
<div class="modal fade modal-login" id="loginModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">游댏 Iniciar Sesi칩n</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="loginForm" method="post" action="/Login/Autenticar">
                    <div class="mb-3">
                        <label for="username" class="form-label">Usuario</label>
                        <input type="text" class="form-control" id="username" name="username" 
                               placeholder="Ingrese su usuario" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Contrase침a</label>
                        <input type="password" class="form-control" id="password" name="password" 
                               placeholder="Ingrese su contrase침a" required>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="remember" name="remember">
                        <label class="form-check-label" for="remember">Recordar sesi칩n</label>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-login">Ingresar</button>
                    </div>
                    <div class="text-center mt-3">
                        <small class="text-muted">
                            쯅o tienes cuenta? <a href="#" class="text-decoration-none">Reg칤strate aqu칤</a>
                        </small>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <header><h1>@ViewData["Title"]</h1></header>

    <main>@RenderBody()</main>

    <footer>&copy; 2025 - Ciber MVC</footer>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Marcar link activo autom치ticamente
    document.addEventListener("DOMContentLoaded", () => {
        const path = location.pathname.toLowerCase();
        document.querySelectorAll(".navbar-nav .nav-link").forEach(a => {
            if (path === a.getAttribute("href").toLowerCase()) {
                a.classList.add("active");
            }
        });
        
        // Manejar el env칤o del formulario de login
        const loginForm = document.getElementById('loginForm');
        if (loginForm) {
            loginForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Aqu칤 ir칤a la l칩gica de autenticaci칩n
                const username = document.getElementById('username').value;
                const password = document.getElementById('password').value;
                
                // Ejemplo b치sico de validaci칩n
                if (username && password) {
                    // Simular login exitoso
                    alert(`Bienvenido, ${username}!`);
                    
                    // Cerrar modal
                    const modal = bootstrap.Modal.getInstance(document.getElementById('loginModal'));
                    modal.hide();
                    
                    // Actualizar navbar (cambiar bot칩n por nombre de usuario)
                    const loginBtn = document.querySelector('[data-bs-target="#loginModal"]');
                    loginBtn.innerHTML = `游녻 ${username}`;
                    loginBtn.classList.remove('btn-outline-light');
                    loginBtn.classList.add('btn-light');
                    loginBtn.setAttribute('onclick', 'logout()');
                    loginBtn.setAttribute('data-bs-toggle', '');
                    
                    // Aqu칤 normalmente redirigir칤as o actualizar칤as la p치gina
                } else {
                    alert('Por favor complete todos los campos');
                }
            });
        }
    });
    
    // Funci칩n para cerrar sesi칩n
    function logout() {
        if (confirm('쮼st치 seguro de cerrar sesi칩n?')) {
            location.reload(); // Esto recargar칤a la p치gina sin sesi칩n
        }
    }
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>