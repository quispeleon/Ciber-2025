@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Ciber</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body >

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
    <div class="container-fluid">

        <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
            <i class="bi bi-controller"></i> Ciber
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">

            <!-- IZQUIERDA -->
            <ul class="navbar-nav me-auto gap-1">

                @if (User.Identity?.IsAuthenticated == true)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Alquiler" asp-action="Activos">
                            <i class="bi bi-clock-history"></i> Alquileres
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Cuenta" asp-action="Index">
                            <i class="bi bi-person-badge"></i> Cuentas
                        </a>
                    </li>

                    @if (User.IsInRole("ADMIN_GENERAL"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Maquina" asp-action="Index">
                                <i class="bi bi-pc-display"></i> Máquinas
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Historial" asp-action="Index">
                                <i class="bi bi-journal-text"></i> Historial
                            </a>
                        </li>
                    }

                @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reportes" asp-action="Index">
                                <i class="bi bi-cash-coin"></i> Reportes
                            </a>
                        </li>
                    }
                }
            </ul>

            <!-- DERECHA -->
            <ul class="navbar-nav align-items-center">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <li class="nav-item text-light me-3">
                        <i class="bi bi-person-circle"></i> @User.Identity.Name
                    </li>

                    <li class="nav-item">
                        <a class="btn btn-outline-danger btn-sm"
                           asp-controller="Auth" asp-action="Logout">
                            <i class="bi bi-box-arrow-right"></i> Salir
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="btn btn-outline-light btn-sm"
                           asp-controller="Auth" asp-action="Login">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                    </li>
                }
            </ul>

        </div>
    </div>
</nav>

    <!-- CONTENIDO -->
    <main >

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer >
        <div >
            © @DateTime.Now.Year - Ciber
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>