@{
    var usuarioNombre = User.Identity?.IsAuthenticated == true 
                        ? User.Identity.Name 
                        : null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ciber MVC</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        :root {
            --bg: #111;
            --nav-bg: #1c1c1c;
            --nav-hover: #2b2b2b;
            --accent: #397ce6;
            --text: #fff;
            --radius: 10px;
        }

        body {
            background: var(--bg);
            color: var(--text);
            font-family: "Segoe UI", sans-serif;
            margin: 0;
            padding-top: 70px;
        }

        nav.navbar-custom {
            background: var(--nav-bg);
            box-shadow: 0 3px 10px rgba(0,0,0,.4);
            padding: 14px 25px;
        }

        .navbar-custom a.nav-link {
            color: var(--text) !important;
            font-size: 1rem;
            padding: 10px 15px;
            border-radius: var(--radius);
            transition: background .25s ease;
        }

        .navbar-custom a.nav-link:hover {
            background: var(--nav-hover);
        }

        .navbar-custom .active {
            background: var(--accent) !important;
            font-weight: bold;
        }

        .modal-login .modal-content {
            border-radius: 15px;
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }

        .modal-login .modal-header {
            background: linear-gradient(135deg, var(--accent), #2a5fc1);
            color: white;
            border-radius: 15px 15px 0 0;
        }

        .modal-login .btn-login {
            background: var(--accent);
            color: white;
            font-weight: bold;
            padding: 10px 20px;
            width: 100%;
            border-radius: 8px;
            border: none;
            transition: background .3s;
        }

        .modal-login .btn-login:hover {
            background: #2a5fc1;
        }
    </style>

</head>
<body>

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
    <a class="navbar-brand fw-bold text-white" href="/">CiberMVC</a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="mainNavbar">
        <ul class="navbar-nav me-auto">
            <li class="nav-item"><a class="nav-link" href="/">游끼 Inicio</a></li>
            <li class="nav-item"><a class="nav-link" href="/Maquina">游 M치quinas</a></li>
            <li class="nav-item"><a class="nav-link" href="/Cuenta">游 Cuentas</a></li>
            <li class="nav-item"><a class="nav-link" href="/Alquiler">游닍 Alquileres</a></li>
            <li class="nav-item"><a class="nav-link" href="/Historial">游닆 Historial</a></li>
            <li class="nav-item"><a class="nav-link" href="/Reportes">游늵 Reportes</a></li>
        </ul>

        <!-- LOGIN / USUARIO -->
        @if (!User.Identity.IsAuthenticated)
        {
            <button class="btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#loginModal">
                游댏 Iniciar Sesi칩n
            </button>
        }
        else
        {
            <div class="d-flex align-items-center text-white">
                游녻 Hola, @User.Identity.Name |
                <a class="ms-2 btn btn-sm btn-danger" href="/Login/Logout">Cerrar sesi칩n</a>
            </div>
        }

    </div>
</nav>

<!-- MODAL LOGIN -->
<div class="modal fade modal-login" id="loginModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">游댏 Iniciar Sesi칩n</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <form method="post" action="/Login/Index">
                    <div class="mb-3">
                        <label class="form-label">DNI</label>
                        <input type="text" class="form-control" name="dni" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Contrase침a</label>
                        <input type="password" class="form-control" name="password" required />
                    </div>

                    <button type="submit" class="btn btn-login">Ingresar</button>

                    <div class="text-center mt-3">
                        <small class="text-muted">
                            쯅o tienes cuenta?
                            <a href="/Cuenta/Create">Reg칤strate aqu칤</a>
                        </small>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


<div class="container mt-4">
    <header><h1>@ViewData["Title"]</h1></header>

    <main>@RenderBody()</main>

    <footer>&copy; 2025 - Ciber MVC</footer>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const normalize = p => (p || '').replace(/\/+$/, '').toLowerCase() || '/';
        const path = normalize(location.pathname);
        document.querySelectorAll(".navbar-nav .nav-link").forEach(a => {
            const href = normalize(a.getAttribute("href"));
            if (href === path || (href !== '/' && path.startsWith(href))) {
                a.classList.add("active");
            } else {
                a.classList.remove("active");
            }
        });
    });
</script>

@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
