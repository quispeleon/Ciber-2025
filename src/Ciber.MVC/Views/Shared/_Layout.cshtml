@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Ciber</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">

            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                ðŸŽ® Ciber
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <!-- COMÃšN A TODOS -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Alquiler" asp-action="Activos">
                                Alquileres
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cuenta" asp-action="Index">
                                Cuentas
                            </a>
                        </li>

                        <!-- ADMIN GENERAL -->
                        @if (User.IsInRole("ADMIN_GENERAL"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Maquina" asp-action="Index">
                                    MÃ¡quinas
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Historial" asp-action="Index">
                                    Historial
                                </a>
                            </li>
                        }

                        <!-- ADMIN FINANZAS -->
                        @if (User.IsInRole("ADMIN_FINANZAS"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Reportes" asp-action="Index">
                                    Finanzas
                                </a>
                            </li>
                        }
                    }
                </ul>

                <!-- DERECHA -->
                <ul class="navbar-nav">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <span class="navbar-text text-light me-3">
                                ðŸ‘¤ @User.Identity.Name
                            </span>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-controller="Auth" asp-action="Logout">
                                Cerrar sesiÃ³n
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Login">
                                Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- CONTENIDO -->
    <div class="container mt-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center">
            Â© @DateTime.Now.Year - Ciber
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
