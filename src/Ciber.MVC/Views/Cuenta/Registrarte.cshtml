@model Ciber.core.Cuenta

@{
    ViewData["Title"] = "Registrar";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Registrarte" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Dni"></label>
        <input asp-for="Dni" class="form-control" />
        <span asp-validation-for="Dni" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pass"></label>
        <input asp-for="Pass" type="password" class="form-control" />
        <span asp-validation-for="Pass" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
