@model IEnumerable<Ciber.core.Cuenta>

<h2>Cuentas</h2>

@if (User.IsInRole("ADMIN_GENERAL"))
{
    <a asp-action="Create" class="btn btn-success mb-3">
        âž• Nueva Cuenta
    </a>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>NÂ°</th>
            <th>Nombre</th>
            <th>Saldo</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var c in Model)
{
        <tr>
            <td>@c.Ncuenta</td>
            <td>@c.Nombre</td>
            <td>$@c.Saldo</td>
            <td>@(c.Activa ? "Activa" : "Inactiva")</td>
            <td>
                <a asp-action="Details" asp-route-id="@c.Ncuenta"
                   class="btn btn-info btn-sm">
                    Ver
                </a>

                @if (User.IsInRole("ADMIN_GENERAL"))
                {
                    <a asp-action="Edit" asp-route-id="@c.Ncuenta"
                       class="btn btn-warning btn-sm">
                        Editar
                    </a>

                    <a asp-action="Delete" asp-route-id="@c.Ncuenta"
                       class="btn btn-danger btn-sm">
                        Eliminar
                    </a>
                }

                @if (User.IsInRole("ADMIN_FINANZAS"))
                {
                    <a asp-action="Recargar" asp-route-id="@c.Ncuenta"
                       class="btn btn-success btn-sm">
                        ðŸ’° Recargar
                    </a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
