@model IEnumerable<Ciber.core.Cuenta>

@{
    ViewData["Title"] = "Lista de Cuentas";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>DNI</th>
            <th>Hora Registrada</th>
            <th>Acciones</th> <!-- Columna de acciones como editar, eliminar -->
        </tr>
    </thead>
    <tbody>
        @foreach (var cuenta in Model)
        {
            <tr>
                <td>@cuenta.Nombre</td>
                <td>@cuenta.Dni</td>
                <td>@cuenta.HoraRegistrada</td>
                <td>
                    <!-- Formulario para eliminar, utilizando la propiedad Ncuenta -->
                    <form action="@Url.Action("EliminarConfirmado", "Cuenta", new { ncuenta = cuenta.Ncuenta })" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Botón para ir a la página de registrarse -->
<a href="@Url.Action("Registrarte", "Cuenta")" class="btn btn-success">Registrarme</a>
