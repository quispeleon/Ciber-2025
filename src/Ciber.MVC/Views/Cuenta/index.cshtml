@model IEnumerable<Ciber.core.Cuenta>

@{
    ViewData["Title"] = "Lista de Cuentas";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>DNI</th>
            <th>Hora Registrada</th>
            <th>Acciones</th> <!-- Columna de acciones como editar, eliminar -->
        </tr>
    </thead>
    <tbody>
        @foreach (var cuenta in Model)
        {
            <tr>
                <td>@cuenta.Nombre</td>
                <td>@cuenta.Dni</td>
                <td>@cuenta.HoraRegistrada</td> <!-- Mostramos la hora registrada -->
                <td>
                    <!-- Puedes agregar botones para editar o eliminar, si es necesario -->
                    <a href="@Url.Action("Eliminar", "Cuenta", new { Ncuenta = cuenta.Ncuenta })" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Botón para ir a la página de registrarse -->
<a href="@Url.Action("Registrarte", "Cuenta")" class="btn btn-success">Registrarme</a>