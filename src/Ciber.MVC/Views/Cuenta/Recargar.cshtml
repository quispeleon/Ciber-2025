@model Cuenta
@{
    ViewData["Title"] = "Recargar Saldo";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-money-bill-wave"></i> @ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <div class="mb-4">
                    <h5>Cuenta: @Model.Nombre</h5>
                    <p class="text-muted">DNI: @Model.Dni</p>
                    <p>Saldo Actual: <strong class="text-success">$@Model.Saldo.ToString("N2")</strong></p>
                </div>

                <form asp-action="Recargar" method="post">
                    <input type="hidden" name="id" value="@Model.Ncuenta" />
                    
                    <div class="mb-3">
                        <label for="monto" class="form-label">Monto a Recargar</label>
                        <input type="number" name="monto" class="form-control" step="0.01" min="1" required>
                        <div class="form-text">MÃ­nimo: $1.00</div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="@Url.Action("Details", new { id = Model.Ncuenta })" class="btn btn-secondary me-md-2">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-check"></i> Confirmar Recarga
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>